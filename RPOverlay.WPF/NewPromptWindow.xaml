<Window x:Class="RPOverlay.WPF.NewPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Skapa ny systemprompten"
        Height="550"
        Width="600"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    <Border Background="#FF1E1E1E"
            CornerRadius="12"
            BorderBrush="#FF2F9DFF"
            BorderThickness="1">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Header -->
            <Border Grid.Row="0"
                    Background="#22FFFFFF"
                    CornerRadius="12,12,0,0"
                    Padding="20,12"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    Cursor="SizeAll">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Skapa ny systemprompten"
                               FontSize="18"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="✕"
                            Click="CancelButton_Click"
                            VerticalAlignment="Center"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Cursor="Hand"
                            ToolTip="Stäng"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1"
                          Margin="20"
                          VerticalScrollBarVisibility="Auto"
                          Background="Transparent">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Prompt Name -->
                    <Grid Grid.Row="0" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Namn (ID):"
                                   Foreground="#FFB0B0B0"
                                   VerticalAlignment="Center"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding PromptName, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#FF1C1C1C"
                                 Foreground="White"
                                 BorderBrush="#FF2F9DFF"
                                 BorderThickness="1"
                                 Padding="8"
                                 VerticalAlignment="Center"
                                 Margin="10,0,0,0"
                                 ToolTip="Ett unikt namn för prompten (används som filnamn)"/>
                    </Grid>

                    <!-- Display Name -->
                    <Grid Grid.Row="1" Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="Visningsnamn:"
                                   Foreground="#FFB0B0B0"
                                   VerticalAlignment="Center"/>

                        <TextBox Grid.Column="1"
                                 Text="{Binding DisplayName, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#FF1C1C1C"
                                 Foreground="White"
                                 BorderBrush="#FF2F9DFF"
                                 BorderThickness="1"
                                 Padding="8"
                                 VerticalAlignment="Center"
                                 Margin="10,0,0,0"
                                 ToolTip="Det namn som visas i dropdown (om tomt används Name)"/>
                    </Grid>

                    <!-- Prompt Content -->
                    <Grid Grid.Row="2" Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0"
                                   Text="Systemprompten:"
                                   Foreground="#FFB0B0B0"
                                   Margin="0,0,0,5"/>

                        <TextBox Grid.Row="1"
                                 Text="{Binding PromptContent, UpdateSourceTrigger=PropertyChanged}"
                                 Background="#FF1C1C1C"
                                 Foreground="White"
                                 BorderBrush="#FF2F9DFF"
                                 BorderThickness="1"
                                 Padding="8"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 ToolTip="Det faktiska innehållet i systemprompten. Det här styrar hur AI:n beter sig."/>
                    </Grid>
                </Grid>
            </ScrollViewer>
            <Border Grid.Row="2"
                    Background="#FF2A2A2A"
                    CornerRadius="0,0,12,12"
                    Padding="20,15"
                    BorderBrush="#FF3A3A3A"
                    BorderThickness="0,1,0,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="1"
                            Content="Spara"
                            Click="SaveButton_Click"
                            Background="#FF2F9DFF"
                            Foreground="White"
                            BorderThickness="0"
                            Padding="16,8"
                            Margin="0,0,10,0"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            FontWeight="SemiBold"/>

                    <Button Grid.Column="2"
                            Content="Avbryt"
                            Click="CancelButton_Click"
                            Background="Transparent"
                            Foreground="White"
                            BorderBrush="#FF2F9DFF"
                            BorderThickness="1"
                            Padding="16,8"
                            VerticalAlignment="Center"
                            Cursor="Hand"
                            FontWeight="SemiBold"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</Window>
