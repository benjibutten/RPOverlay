<Window x:Class="RPOverlay.WPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Inställningar - The Path RP Overlay"
        Height="600"
        Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    <Border Background="#FF1E1E1E"
            CornerRadius="12"
            BorderBrush="#FF2F9DFF"
            BorderThickness="1">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Header -->
            <Border Grid.Row="0"
                    Background="#22FFFFFF"
                    CornerRadius="12,12,0,0"
                    Padding="20,12"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    Cursor="SizeAll">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Inställningar"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="✕"
                            Click="CloseButton_Click"
                            VerticalAlignment="Center"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Cursor="Hand"
                            ToolTip="Stäng"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- User Settings Section -->
                <Border Grid.Row="0" 
                        Background="#FF2A2A2A"
                        BorderBrush="#FF3A3A3A"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="15"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Allmänna inställningar"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,15"/>

                        <!-- Opacity Slider -->
                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Opacitet:"
                                       Foreground="#FFB0B0B0"
                                       VerticalAlignment="Center"/>
                            
                            <Slider Grid.Column="1"
                                    x:Name="OpacitySlider"
                                    Minimum="0.1"
                                    Maximum="1.0"
                                    Value="{Binding WindowOpacity, Mode=TwoWay}"
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"
                                    Margin="10,0"/>
                            
                            <TextBlock Grid.Column="2"
                                       Text="{Binding WindowOpacity, StringFormat={}{0:P0}}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- Toggle Hotkey -->
                        <Grid Grid.Row="2" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Toggle Hotkey:"
                                       Foreground="#FFB0B0B0"
                                       VerticalAlignment="Center"/>
                            
                            <Button Grid.Column="1"
                                    x:Name="HotkeyButton"
                                    Content="{Binding ToggleHotkey}"
                                    Click="HotkeyButton_Click"
                                    Background="#FF1C1C1C"
                                    Foreground="White"
                                    BorderBrush="#FF2F9DFF"
                                    BorderThickness="1"
                                    Padding="8"
                                    HorizontalContentAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0"
                                    Cursor="Hand"
                                    ToolTip="Klicka och tryck på tangenten du vill använda"/>
                        </Grid>

                        <!-- Interactivity Toggle -->
                        <Grid Grid.Row="3" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Interactivity Toggle:"
                                       Foreground="#FFB0B0B0"
                                       VerticalAlignment="Center"/>
                            
                            <Button Grid.Column="1"
                                    x:Name="InteractivityButton"
                                    Content="{Binding InteractivityToggle}"
                                    Click="InteractivityButton_Click"
                                    Background="#FF1C1C1C"
                                    Foreground="White"
                                    BorderBrush="#FF2F9DFF"
                                    BorderThickness="1"
                                    Padding="8"
                                    HorizontalContentAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0"
                                    Cursor="Hand"
                                    ToolTip="Klicka och tryck på tangenten eller musknappen du vill använda"/>
                        </Grid>
                    </Grid>
                </Border>

            <Grid Grid.Row="1" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Dina Kommandon"
                           FontSize="16"
                           Foreground="#FFB0B0B0"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="+ Lägg till nytt"
                        Click="AddButton_Click"
                        Background="#FF2F9DFF"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        FontSize="14"
                        Cursor="Hand"/>
            </Grid>

            <ScrollViewer Grid.Row="2"
                          VerticalScrollBarVisibility="Hidden">
                <ItemsControl x:Name="CommandsItemsControl"
                              ItemsSource="{Binding Commands}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF2A2A2A"
                                    BorderBrush="#FF3A3A3A"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Margin="0,0,0,10"
                                    Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="Knapp-etikett:"
                                               Foreground="#FFB0B0B0"
                                               FontSize="12"
                                               Margin="0,0,0,5"/>

                                    <TextBox Grid.Row="1" Grid.Column="0"
                                             Text="{Binding Label, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#FF1C1C1C"
                                             Foreground="White"
                                             BorderBrush="#FF2F9DFF"
                                             BorderThickness="1"
                                             Padding="8"
                                             Margin="0,0,10,10"/>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                                Orientation="Vertical"
                                                VerticalAlignment="Center">
                                        <Button Content="↑"
                                                Click="MoveUpButton_Click"
                                                Tag="{Binding}"
                                                Width="40"
                                                Height="35"
                                                Margin="0,0,0,5"
                                                Background="#FF3A3A3A"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="16"
                                                Cursor="Hand"/>
                                        <Button Content="↓"
                                                Click="MoveDownButton_Click"
                                                Tag="{Binding}"
                                                Width="40"
                                                Height="35"
                                                Margin="0,0,0,5"
                                                Background="#FF3A3A3A"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="16"
                                                Cursor="Hand"/>
                                        <Button Content="✕"
                                                Click="DeleteButton_Click"
                                                Tag="{Binding}"
                                                Width="40"
                                                Height="35"
                                                Background="#FFD32F2F"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="16"
                                                Cursor="Hand"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Text="Kommando-text:"
                                               Foreground="#FFB0B0B0"
                                               FontSize="12"
                                               Margin="0,0,0,5"/>

                                    <TextBox Grid.Row="3" Grid.Column="0"
                                             Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#FF1C1C1C"
                                             Foreground="White"
                                             BorderBrush="#FF2F9DFF"
                                             BorderThickness="1"
                                             Padding="8"
                                             Margin="0,0,10,0"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinHeight="60"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Footer Buttons -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Spara"
                    Click="SaveButton_Click"
                    Background="#FF4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="30,10"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>

            <Button Grid.Column="2"
                    Content="Avbryt"
                    Click="CancelButton_Click"
                    Background="#FF757575"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="30,10"
                    FontSize="14"
                    Cursor="Hand"/>
        </Grid>
    </Grid>
    </Border>
</Window>
