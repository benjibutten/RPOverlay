<Window x:Class="RPOverlay.WPF.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Inställningar - The Path RP Overlay"
        Height="600"
        Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        ResizeMode="CanResize">
    <Border Background="#FF1E1E1E"
            CornerRadius="12"
            BorderBrush="#FF2F9DFF"
            BorderThickness="1">
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Custom Header -->
            <Border Grid.Row="0"
                    Background="#22FFFFFF"
                    CornerRadius="12,12,0,0"
                    Padding="20,12"
                    MouseLeftButtonDown="TitleBar_MouseLeftButtonDown"
                    Cursor="SizeAll">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0"
                               Text="Inställningar"
                               FontSize="20"
                               FontWeight="SemiBold"
                               Foreground="White"
                               VerticalAlignment="Center"/>

                    <Button Grid.Column="1"
                            Content="✕"
                            Click="CloseButton_Click"
                            VerticalAlignment="Center"
                            Width="30"
                            Height="30"
                            Background="Transparent"
                            Foreground="White"
                            BorderThickness="0"
                            FontSize="18"
                            Cursor="Hand"
                            ToolTip="Stäng"/>
                </Grid>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Row="1" 
                          Margin="20"
                          VerticalScrollBarVisibility="Auto"
                          Background="Transparent">
                <ScrollViewer.Resources>
                    <!-- Ultra-smal scrollbar stil -->
                    <Style TargetType="{x:Type ScrollBar}">
                        <Setter Property="Width" Value="4"/>
                        <Setter Property="MinWidth" Value="4"/>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="Foreground" Value="#FF2F9DFF"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="{x:Type ScrollBar}">
                                    <Grid x:Name="Bg" Width="4">
                                        <Track x:Name="PART_Track" 
                                               IsDirectionReversed="True"
                                               Width="4">
                                            <Track.DecreaseRepeatButton>
                                                <RepeatButton Opacity="0" Command="ScrollBar.PageUpCommand"/>
                                            </Track.DecreaseRepeatButton>
                                            <Track.Thumb>
                                                <Thumb Width="4">
                                                    <Thumb.Template>
                                                        <ControlTemplate TargetType="{x:Type Thumb}">
                                                            <Border Background="#FF2F9DFF" 
                                                                    CornerRadius="2"
                                                                    Width="4"
                                                                    Opacity="0.6"/>
                                                        </ControlTemplate>
                                                    </Thumb.Template>
                                                </Thumb>
                                            </Track.Thumb>
                                            <Track.IncreaseRepeatButton>
                                                <RepeatButton Opacity="0" Command="ScrollBar.PageDownCommand"/>
                                            </Track.IncreaseRepeatButton>
                                        </Track>
                                    </Grid>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </ScrollViewer.Resources>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                <!-- User Settings Section -->
                <Border Grid.Row="0" 
                        Background="#FF2A2A2A"
                        BorderBrush="#FF3A3A3A"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="15"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="Allmänna inställningar"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,15"/>

                        <!-- Opacity Slider -->
                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="50"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Opacitet:"
                                       Foreground="#FFB0B0B0"
                                       VerticalAlignment="Center"/>
                            
                            <Slider Grid.Column="1"
                                    x:Name="OpacitySlider"
                                    Minimum="0.1"
                                    Maximum="1.0"
                                    Value="{Binding WindowOpacity, Mode=TwoWay}"
                                    TickFrequency="0.1"
                                    IsSnapToTickEnabled="True"
                                    VerticalAlignment="Center"
                                    Margin="10,0"/>
                            
                            <TextBlock Grid.Column="2"
                                       Text="{Binding WindowOpacity, StringFormat={}{0:P0}}"
                                       Foreground="White"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Right"/>
                        </Grid>

                        <!-- Toggle Hotkey -->
                        <Grid Grid.Row="2" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Toggle Hotkey:"
                                       Foreground="#FFB0B0B0"
                                       VerticalAlignment="Center"/>
                            
                            <Button Grid.Column="1"
                                    x:Name="HotkeyButton"
                                    Content="{Binding ToggleHotkey}"
                                    Click="HotkeyButton_Click"
                                    Background="#FF1C1C1C"
                                    Foreground="White"
                                    BorderBrush="#FF2F9DFF"
                                    BorderThickness="1"
                                    Padding="8"
                                    HorizontalContentAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0"
                                    Cursor="Hand"
                                    ToolTip="Klicka och tryck på tangenten du vill använda"/>
                        </Grid>

                        <!-- Interactivity Toggle -->
                        <Grid Grid.Row="3" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="Interactivity Toggle:"
                                       Foreground="#FFB0B0B0"
                                       VerticalAlignment="Center"/>
                            
                            <Button Grid.Column="1"
                                    x:Name="InteractivityButton"
                                    Content="{Binding InteractivityToggle}"
                                    Click="InteractivityButton_Click"
                                    Background="#FF1C1C1C"
                                    Foreground="White"
                                    BorderBrush="#FF2F9DFF"
                                    BorderThickness="1"
                                    Padding="8"
                                    HorizontalContentAlignment="Left"
                                    VerticalAlignment="Center"
                                    Margin="10,0,0,0"
                                    Cursor="Hand"
                                    ToolTip="Klicka och tryck på tangenten eller musknappen du vill använda"/>
                        </Grid>

                        <!-- Middle Click Toggle -->
                        <Grid Grid.Row="4" Margin="0,0,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0"
                                       Text="Mittenklicksläge:"
                                       Foreground="#FFB0B0B0"
                                       VerticalAlignment="Center"/>

                            <CheckBox Grid.Column="1"
                                      Content="Använd mittenklick i hela appen"
                                      IsChecked="{Binding UseMiddleClickAsPrimary, Mode=TwoWay}"
                                      Margin="10,0,0,0"
                                      VerticalAlignment="Center"
                                      Foreground="White"
                                      Cursor="Hand"/>
                        </Grid>
                    </Grid>
                </Border>
                
                <!-- AI Chat Settings Section -->
                <Border Grid.Row="1" 
                        Background="#FF2A2A2A"
                        BorderBrush="#FF3A3A3A"
                        BorderThickness="1"
                        CornerRadius="6"
                        Padding="15"
                        Margin="0,0,0,15">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Grid.Row="0"
                                   Text="AI Chat Inställningar"
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="White"
                                   Margin="0,0,0,15"/>

                        <!-- OpenAI API Key -->
                        <Grid Grid.Row="1" Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="150"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock Grid.Column="0"
                                       Text="OpenAI API-nyckel:"
                                       Foreground="#FFB0B0B0"
                                       VerticalAlignment="Center"/>
                            
                            <PasswordBox Grid.Column="1"
                                         x:Name="ApiKeyPasswordBox"
                                         Background="#FF1C1C1C"
                                         Foreground="White"
                                         BorderBrush="#FF2F9DFF"
                                         BorderThickness="1"
                                         Padding="8"
                                         VerticalAlignment="Center"
                                         Margin="10,0,0,0"
                                         ToolTip="Din OpenAI API-nyckel (sparas i .ini fil)"/>
                        </Grid>

                        <!-- System Prompt Selection -->
                        <Grid Grid.Row="2" Margin="0,0,0,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            
                            <TextBlock Grid.Row="0"
                                       Text="Systemprompter:"
                                       Foreground="#FFB0B0B0"
                                       Margin="0,0,0,5"/>
                            
                            <!-- Prompt ComboBox -->
                            <Grid Grid.Row="1" Margin="0,0,0,10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <ComboBox Grid.Column="0"
                                          x:Name="PromptsComboBox"
                                          ItemsSource="{Binding AvailablePrompts}"
                                          SelectedItem="{Binding SelectedPrompt}"
                                          DisplayMemberPath="DisplayName"
                                          FontSize="13"
                                          Height="35"
                                          VerticalContentAlignment="Center"
                                          VerticalAlignment="Center"
                                          ToolTip="Välj en systemprompten">
                                    <ComboBox.Style>
                                        <Style TargetType="ComboBox">
                                            <Setter Property="Background" Value="#FF1C1C1C"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="BorderBrush" Value="#FF2F9DFF"/>
                                            <Setter Property="BorderThickness" Value="1"/>
                                            <Setter Property="Padding" Value="10,8"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBox">
                                                        <Grid>
                                                            <ToggleButton x:Name="ToggleButton"
                                                                          Grid.Column="0"
                                                                          Focusable="False"
                                                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                                                          ClickMode="Press">
                                                                <ToggleButton.Template>
                                                                    <ControlTemplate TargetType="ToggleButton">
                                                                        <Border Background="#FF1C1C1C"
                                                                                BorderBrush="#FF2F9DFF"
                                                                                BorderThickness="1"
                                                                                CornerRadius="2">
                                                                            <Grid>
                                                                                <Grid.ColumnDefinitions>
                                                                                    <ColumnDefinition Width="*"/>
                                                                                    <ColumnDefinition Width="Auto"/>
                                                                                </Grid.ColumnDefinitions>
                                                                                <ContentPresenter Grid.Column="0"
                                                                                                  Content="{TemplateBinding Content}"
                                                                                                  ContentTemplate="{TemplateBinding ContentTemplate}"
                                                                                                  Margin="10,8"
                                                                                                  VerticalAlignment="Center"
                                                                                                  HorizontalAlignment="Left"/>
                                                                                <Path Grid.Column="1"
                                                                                      Data="M 0 0 L 4 4 L 8 0 Z"
                                                                                      Fill="White"
                                                                                      Margin="0,0,10,0"
                                                                                      VerticalAlignment="Center"
                                                                                      HorizontalAlignment="Center"/>
                                                                            </Grid>
                                                                        </Border>
                                                                    </ControlTemplate>
                                                                </ToggleButton.Template>
                                                            </ToggleButton>
                                                            <ContentPresenter x:Name="ContentSite"
                                                                              IsHitTestVisible="False"
                                                                              Content="{TemplateBinding SelectionBoxItem}"
                                                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                                              Margin="10,8,30,8"
                                                                              VerticalAlignment="Center"
                                                                              HorizontalAlignment="Left">
                                                                <ContentPresenter.Resources>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="White"/>
                                                                    </Style>
                                                                </ContentPresenter.Resources>
                                                            </ContentPresenter>
                                                            <Popup IsOpen="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}}"
                                                                   Placement="Bottom"
                                                                   AllowsTransparency="True"
                                                                   Focusable="False"
                                                                   PopupAnimation="Slide">
                                                                <Border Background="#FF1C1C1C"
                                                                        BorderBrush="#FF2F9DFF"
                                                                        BorderThickness="1"
                                                                        CornerRadius="2"
                                                                        MinWidth="{Binding ActualWidth, RelativeSource={RelativeSource TemplatedParent}}">
                                                                    <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                                                                        <ItemsPresenter/>
                                                                    </ScrollViewer>
                                                                </Border>
                                                            </Popup>
                                                        </Grid>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.Style>
                                    <ComboBox.ItemContainerStyle>
                                        <Style TargetType="ComboBoxItem">
                                            <Setter Property="Background" Value="#FF1C1C1C"/>
                                            <Setter Property="Foreground" Value="White"/>
                                            <Setter Property="Padding" Value="10,8"/>
                                            <Setter Property="FontSize" Value="13"/>
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="ComboBoxItem">
                                                        <Border x:Name="Border"
                                                                Background="{TemplateBinding Background}"
                                                                Padding="{TemplateBinding Padding}">
                                                            <ContentPresenter>
                                                                <ContentPresenter.Resources>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="Foreground" Value="White"/>
                                                                    </Style>
                                                                </ContentPresenter.Resources>
                                                            </ContentPresenter>
                                                        </Border>
                                                        <ControlTemplate.Triggers>
                                                            <Trigger Property="IsHighlighted" Value="True">
                                                                <Setter TargetName="Border" Property="Background" Value="#FF2F9DFF"/>
                                                            </Trigger>
                                                            <Trigger Property="IsSelected" Value="True">
                                                                <Setter TargetName="Border" Property="Background" Value="#FF2F9DFF"/>
                                                            </Trigger>
                                                        </ControlTemplate.Triggers>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </ComboBox.ItemContainerStyle>
                                </ComboBox>
                                
                                <Button Grid.Column="1"
                                        x:Name="EditPromptButton"
                                        Content="✎ Redigera"
                                        Click="EditPromptButton_Click"
                                        Background="#FF3A3A3A"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="35"
                                        Padding="12,8"
                                        FontSize="13"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        ToolTip="Redigera vald prompt"/>
                                
                                <Button Grid.Column="2"
                                        x:Name="DeletePromptButton"
                                        Content="✕ Ta bort"
                                        Click="DeletePromptButton_Click"
                                        Background="#FFFF6B35"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="35"
                                        Padding="12,8"
                                        FontSize="13"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        ToolTip="Ta bort vald prompt"/>
                                
                                <Button Grid.Column="3"
                                        x:Name="NewPromptButton"
                                        Content="+ Ny"
                                        Click="NewPromptButton_Click"
                                        Background="#FF2F9DFF"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Height="35"
                                        Padding="12,8"
                                        FontSize="13"
                                        Margin="5,0,0,0"
                                        VerticalAlignment="Center"
                                        Cursor="Hand"
                                        ToolTip="Skapa en ny systemprompten"/>
                            </Grid>
                            
                            <!-- Prompt Preview -->
                            <TextBlock Grid.Row="2"
                                       Text="Förhandsgranskning:"
                                       Foreground="#FFB0B0B0"
                                       Margin="0,0,0,5"/>
                            
                            <TextBox Grid.Row="3"
                                     Text="{Binding SelectedPrompt.Content, Mode=OneWay}"
                                     Background="#FF1C1C1C"
                                     Foreground="#FF999999"
                                     BorderBrush="#FF2F9DFF"
                                     BorderThickness="1"
                                     Padding="8"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     MinHeight="60"
                                     MaxHeight="100"
                                     VerticalScrollBarVisibility="Auto"
                                     IsReadOnly="True"
                                     Cursor="Arrow"
                                     IsEnabled="False"
                                     ToolTip="Innehållet i den valda systemprompten"/>
                        </Grid>
                    </Grid>
                </Border>

            <Grid Grid.Row="2" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="Dina Kommandon"
                           FontSize="16"
                           Foreground="#FFB0B0B0"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1"
                        Content="+ Lägg till nytt"
                        Click="AddButton_Click"
                        Background="#FF2F9DFF"
                        Foreground="White"
                        BorderThickness="0"
                        Padding="15,8"
                        FontSize="14"
                        Cursor="Hand"/>
            </Grid>

            <ItemsControl Grid.Row="3"
                          x:Name="CommandsItemsControl"
                          ItemsSource="{Binding Commands}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FF2A2A2A"
                                    BorderBrush="#FF3A3A3A"
                                    BorderThickness="1"
                                    CornerRadius="6"
                                    Margin="0,0,0,10"
                                    Padding="15">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0"
                                               Text="Knapp-etikett:"
                                               Foreground="#FFB0B0B0"
                                               FontSize="12"
                                               Margin="0,0,0,5"/>

                                    <TextBox Grid.Row="1" Grid.Column="0"
                                             Text="{Binding Label, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#FF1C1C1C"
                                             Foreground="White"
                                             BorderBrush="#FF2F9DFF"
                                             BorderThickness="1"
                                             Padding="8"
                                             Margin="0,0,10,10"/>

                                    <StackPanel Grid.Row="0" Grid.Column="1" Grid.RowSpan="3"
                                                Orientation="Vertical"
                                                VerticalAlignment="Center">
                                        <Button Content="↑"
                                                Click="MoveUpButton_Click"
                                                Tag="{Binding}"
                                                Width="40"
                                                Height="35"
                                                Margin="0,0,0,5"
                                                Background="#FF3A3A3A"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="16"
                                                Cursor="Hand"/>
                                        <Button Content="↓"
                                                Click="MoveDownButton_Click"
                                                Tag="{Binding}"
                                                Width="40"
                                                Height="35"
                                                Margin="0,0,0,5"
                                                Background="#FF3A3A3A"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="16"
                                                Cursor="Hand"/>
                                        <Button Content="✕"
                                                Click="DeleteButton_Click"
                                                Tag="{Binding}"
                                                Width="40"
                                                Height="35"
                                                Background="#FFD32F2F"
                                                Foreground="White"
                                                BorderThickness="0"
                                                FontSize="16"
                                                Cursor="Hand"/>
                                    </StackPanel>

                                    <TextBlock Grid.Row="2" Grid.Column="0"
                                               Text="Kommando-text:"
                                               Foreground="#FFB0B0B0"
                                               FontSize="12"
                                               Margin="0,0,0,5"/>

                                    <TextBox Grid.Row="3" Grid.Column="0"
                                             Text="{Binding Text, UpdateSourceTrigger=PropertyChanged}"
                                             Background="#FF1C1C1C"
                                             Foreground="White"
                                             BorderBrush="#FF2F9DFF"
                                             BorderThickness="1"
                                             Padding="8"
                                             Margin="0,0,10,0"
                                             AcceptsReturn="True"
                                             TextWrapping="Wrap"
                                             MinHeight="60"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </Grid>
            </ScrollViewer>

        <!-- Footer Buttons -->
        <Grid Grid.Row="2" Margin="20,0,20,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="1"
                    Content="Spara"
                    Click="SaveButton_Click"
                    Background="#FF4CAF50"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="30,10"
                    FontSize="14"
                    Margin="0,0,10,0"
                    Cursor="Hand"/>

            <Button Grid.Column="2"
                    Content="Avbryt"
                    Click="CancelButton_Click"
                    Background="#FF757575"
                    Foreground="White"
                    BorderThickness="0"
                    Padding="30,10"
                    FontSize="14"
                    Cursor="Hand"/>
        </Grid>
    </Grid>
    </Border>
</Window>
